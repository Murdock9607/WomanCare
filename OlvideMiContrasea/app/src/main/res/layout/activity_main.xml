<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8BBD0"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textRecuperacontraseña"
        android:layout_width="372dp"
        android:layout_height="54dp"
        android:fontFamily="sans-serif-black"
        android:text="RECUPERA TU CONTRASEÑA"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="118dp" />

    <TextView
        android:id="@+id/textingresacorreo"
        android:layout_width="264dp"
        android:layout_height="67dp"
        android:fontFamily="sans-serif-medium"
        android:text="Ingresa tu correo registrado"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="195dp" />

    <Button
        android:id="@+id/RecuperarContraseña"
        android:layout_width="338dp"
        android:layout_height="64dp"
        android:text="Recuperar"
        android:backgroundTint="#D54A79"
        app:cornerRadius="20dp"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="374dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:hint="Correo electronico"
        android:textColorHint="@color/black"
        android:textStyle="bold"
        app:boxBackgroundColor="@color/white"
        app:counterTextColor="@color/white"
        app:hintTextColor="@color/white"
        tools:layout_editor_absoluteX="-36dp"
        tools:layout_editor_absoluteY="286dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/gmail"
            android:textStyle="italic"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:singleLine="true"
            android:gravity="center_horizontal"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            />
    </com.google.android.material.textfield.TextInputLayout>


</androidx.constraintlayout.widget.ConstraintLayout>