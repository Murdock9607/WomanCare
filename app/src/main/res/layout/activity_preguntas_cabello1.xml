<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    tools:context=".PreguntasCabello1">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:background="@drawable/preguntas"
        android:contextClickable="false"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="229dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="69dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/atrasBoton"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#00FFFFFF"
                    android:onClick="atras"
                    android:visibility="visible"
                    tools:visibility="visible" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="421dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:fontFamily="@font/montserrat"
                android:text="¿Cada cuánto te lavas el cabello?"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/idpeinar"
                android:layout_width="match_parent"
                android:layout_height="26dp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:fontFamily="@font/montserrat"
                android:text="¿Cuál es el grosor de tu cabello?"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/idgrosor"
                android:layout_width="match_parent"
                android:layout_height="26dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:fontFamily="@font/montserrat"
                android:text="¿Tu cabello es fácil de cepillar?"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/idlavado"
                android:layout_width="match_parent"
                android:layout_height="26dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:fontFamily="@font/montserrat"
                android:text="¿Qué estructura tiene tu cabello?"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/idestructura"
                android:layout_width="match_parent"
                android:layout_height="26dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:fontFamily="@font/montserrat"
                android:text="¿Tienes algún tratamiento químico?"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/idtratamientoQ"
                android:layout_width="match_parent"
                android:layout_height="26dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:fontFamily="@font/montserrat"
                android:text="¿Que elementos usas con frecuencia?"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/idelementos"
                android:layout_width="match_parent"
                android:layout_height="26dp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:fontFamily="@font/montserrat"
                android:text="¿Cómo sientes tu cabello en este momento?"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/idestado"
                android:layout_width="match_parent"
                android:layout_height="26dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="126dp"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="154dp"
                android:layout_height="41dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/finCabello"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#00FFFFFF"
                    android:onClick="Resultado"
                    android:visibility="visible"
                    tools:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>