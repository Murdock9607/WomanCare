<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HairCare1">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="400dp"
        android:layout_height="720dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/preguntas"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="5dp" />

    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="383dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="224dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="361dp"
            android:layout_height="26dp"
            android:fontFamily="@font/montserrat"
            android:text="¿Tu cabello es fácil de peinar?"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/peinar"
            android:layout_width="361dp"
            android:layout_height="26dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="361dp"
            android:layout_height="26dp"
            android:fontFamily="@font/montserrat"
            android:text="¿Cuál es el grosor de tu cabello?"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/grosor"
            android:layout_width="361dp"
            android:layout_height="26dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="361dp"
            android:layout_height="26dp"
            android:fontFamily="@font/montserrat"
            android:text="¿Cada cuánto te lavas el cabello?"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/lavado"
            android:layout_width="361dp"
            android:layout_height="26dp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="361dp"
            android:layout_height="26dp"
            android:fontFamily="@font/montserrat"
            android:text="¿Qué estructura tiene tu cabello?"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/estructura"
            android:layout_width="361dp"
            android:layout_height="26dp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="361dp"
            android:layout_height="26dp"
            android:text="¿Tienes algún tratamiento químico?" />

        <Spinner
            android:id="@+id/tratamientoQ"
            android:layout_width="361dp"
            android:layout_height="26dp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="361dp"
            android:layout_height="26dp"
            android:text="¿Qué elementos usas con frecuencia?" />

        <Spinner
            android:id="@+id/elementos"
            android:layout_width="361dp"
            android:layout_height="26dp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="361dp"
            android:layout_height="26dp"
            android:text="¿Cómo sientes el cabello en este momento?" />

        <Spinner
            android:id="@+id/spinner14"
            android:layout_width="361dp"
            android:layout_height="26dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="180dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="34dp">

        <Button
            android:id="@+id/button3"
            android:layout_width="41dp"
            android:layout_height="35dp"
            android:onClick="anterior"
            android:text="Button"
            tools:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="43dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="637dp">

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:onClick="tipoCabello"
            android:text="Button"
            android:visibility="invisible" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>